{
  "connection": "default",
  "collectionName": "article",
  "info": {
    "name": "article",
    "description": "Write your article here.",
    "mainField": "title"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "featuredImage": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "content": {
      "type": "text",
      "required": true
    },
    "category": {
      "model": "category",
      "via": "Category"
    },
    "author": {
      "model": "user",
      "via": "articles",
      "plugin": "users-permissions"
    },
    "slug": {
      "unique": true,
      "type": "string",
      "required": true
    },
    "excerpt": {
      "default": "Display an excerpt!",
      "maxLength": 180,
      "type": "text"
    },
    "tags": {
      "collection": "tags",
      "via": "articles"
    },
    "issue": {
      "model": "view",
      "via": "articles"
    },
    "topfavorite": {
      "collection": "view",
      "via": "toparticles"
    },
    "imagecaption": {
      "type": "string"
    }
  }
}
